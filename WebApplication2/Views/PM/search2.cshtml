
@{
    ViewBag.Title = "Search OF JD";
    Layout = "~/Views/Shared/_SearchLayout.cshtml";
}

<br />
<br />
<div class="container">
    <!--
    <div class="form-group">


    </div>
        -->
    <input type="text" id="Search" placeholder="Search" class="form-control" />
</div>
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th>Junier_Developer_ID</th>
            <th>Junier_Developer_Name</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in ViewBag.all)
        {
            <tr class="Search">
                <td>@item.JD_ID</td>
                <td>@item.JD_FirstName @item.JD_LastName</td>
                <td><a href="@Url.Action("sendNotificationToJuniorDeveloper","PM",new { jdId = @item.JD_ID})" class="btn btn-primary">Send Notifications</a>
            </tr>
        }
    </tbody>

</table>


<script src="~/Scripts/fjquery-1.10.2.min.js"></script>
<script>
    $(document).ready(function () {
        function Contains(text_one, text_two) {
            if (text_one.indexOf(text_two) != -1)
                return true;
        }
        $("#Search").keyup(function () {

            var searchText = $("#Search").val().toLowerCase();
            $(".Search").each(function () {
                if (!Contains($(this).text().toLowerCase(), searchText)) {

                    $(this).hide();
                }
                else {

                    $(this).show();
                }
            });
        });
    });
</script>
